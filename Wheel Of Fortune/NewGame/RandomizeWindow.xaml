<Window x:Class="Wheel_Of_Fortune.NewGame.RandomizeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wheel_Of_Fortune.NewGame"
        mc:Ignorable="d"
        Title="RandomizeWindow" Height="289.85" Width="300" WindowStartupLocation="CenterScreen">
    <Grid Height="269" VerticalAlignment="Top">
        <TextBlock x:Name="NameText" HorizontalAlignment="Left" Height="50" Margin="0,22,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="292" FontSize="30" TextAlignment="Center"/>
        <TextBlock x:Name="DescriptText" HorizontalAlignment="Left" Height="62" Margin="10,87,0,0" TextWrapping="Wrap" Text="With the roll of a dice, it looks like XXXX will be starting us off!" VerticalAlignment="Top" Width="271" FontSize="16" TextAlignment="Center"/>
        <Button x:Name="StartButton" Content="Start Game" HorizontalAlignment="Left" Height="49" Margin="69,173,0,0" VerticalAlignment="Top" Width="156" FontSize="18" Click="StartButton_Click"/>
    </Grid>
</Window>
